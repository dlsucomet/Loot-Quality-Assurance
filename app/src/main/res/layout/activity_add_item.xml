<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar">
    </include>
   <LinearLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:padding="16dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical" >

       <LinearLayout
           android:layout_marginTop="16dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="2"
           android:orientation="horizontal">
           <android.support.design.widget.TextInputLayout
               android:id="@+id/input_layout_value"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="2">
               <EditText
                   android:id="@+id/input_expense_value"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:inputType="numberDecimal"
                   android:hint="Price"
                   android:digits="0123456789." />
           </android.support.design.widget.TextInputLayout>

           <TextView
               android:id="@+id/add_expense_currency"
               android:padding="5dp"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:layout_weight="1"
               android:textSize="16sp"
               android:text="Philippine Pesos"/>
       </LinearLayout>

       <android.support.design.widget.TextInputLayout
           android:id="@+id/input_layout_title"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <EditText
               android:id="@+id/input_expense_title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Title" />
       </android.support.design.widget.TextInputLayout>

       <RadioGroup
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/rgItem"
           android:baselineAligned="false"
           android:orientation="horizontal"
           android:paddingTop="5dp">

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Income"
               android:id="@+id/rbIncome"
               android:checked="false"
               android:paddingRight="20dp" />

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Expense"
               android:id="@+id/rbExpense"
               android:paddingRight="20dp" />

       </RadioGroup>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:id="@+id/categoryText"
           android:visibility="visible">
           <TextView
               android:layout_marginTop="16dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_vertical"
               android:textSize="16sp"
               android:text="Category - "
               android:id="@+id/tvCategory" />
           <TextView
               android:id="@+id/add_category"
               android:layout_marginTop="16dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_vertical"
               android:textSize="16sp"/>
       </LinearLayout>

       <LinearLayout
           android:layout_marginTop="16dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="6"
           android:orientation="horizontal"
           android:id="@+id/categoryButtons"
           android:visibility="visible">
           <ImageView
               android:id="@+id/add_food"
               android:layout_width="32dp"
               android:layout_height="32dp"
               android:layout_weight="1"
               android:src="@drawable/food"/>
           <ImageView
               android:id="@+id/add_leisure"
               android:layout_width="32dp"
               android:layout_height="32dp"
               android:layout_weight="1"
               android:src="@drawable/leisure"/>
           <ImageView
               android:id="@+id/add_transportation"
               android:layout_width="32dp"
               android:layout_height="32dp"
               android:layout_weight="1"
               android:src="@drawable/transportation"/>
           <ImageView
               android:id="@+id/add_bills"
               android:layout_width="32dp"
               android:layout_height="32dp"
               android:layout_weight="1"
               android:src="@drawable/bills"/>
           <ImageView
               android:id="@+id/add_debt"
               android:layout_width="32dp"
               android:layout_height="32dp"
               android:layout_weight="1"
               android:src="@drawable/debt"/>
           <ImageView
               android:id="@+id/add_others"
               android:layout_width="32dp"
               android:layout_height="32dp"
               android:layout_weight="1"
               android:src="@drawable/others"/>
       </LinearLayout>

       <LinearLayout
           android:layout_marginTop="16dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="4"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/add_date"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="4"
                   android:textSize="16sp"
                   android:text="Date - " />
               <Button
                   android:id="@+id/add_date_button"
                   android:layout_width="wrap_content"
                   android:layout_height="42dp"
                   android:layout_weight="1"
                   android:background="@color/colorAccent"
                   android:textColor="@color/colorDefault"
                   android:text="Change"/>
           </LinearLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:orientation="horizontal"
                   android:visibility="gone">
                   <Button
                       android:id="@+id/add_cancel_button"
                       android:layout_marginRight="16dp"
                       android:layout_width="wrap_content"
                       android:layout_height="42dp"
                       android:layout_weight="1"
                       android:background="@color/colorRed"
                       android:textColor="@color/colorDefault"
                       android:text="Cancel"/>
                   <Button
                       android:id="@+id/add_submit_button"
                       android:layout_width="wrap_content"
                       android:layout_height="42dp"
                       android:layout_weight="1"
                       android:background="@color/colorAccent"
                       android:textColor="@color/colorDefault"
                       android:text="Submit"/>
               </LinearLayout>
           </RelativeLayout>
       </LinearLayout>
   </LinearLayout>
</LinearLayout>
